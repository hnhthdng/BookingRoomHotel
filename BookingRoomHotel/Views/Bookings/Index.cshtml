<!--Calender starts -->
<div class="content container-fluid">
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <div class="mt-5">
                    <h4 class="card-title float-left mt-2">Booking</h4>
                    <button type="button" class="btn btn-primary float-right veiwbutton" data-toggle="modal" data-target="#add_event1">Add New Booking</button>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12 col-md-8">
        <div class="card">
            <div class="card-body">
                <div id="calendar"></div>
            </div>
        </div>
    </div>
</div>
<!--Model add new booking-->
<div id="add_event1" class="modal fade" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Booking</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true">&times;</span> </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label>Booking ID <span class="text-danger">*</span></label>
                            <input class="form-control" type="text">
                        </div>

                        <div class="form-group col-lg-6">
                            <label>Customer ID <span class="text-danger">*</span></label>
                            <input class="form-control" type="text">
                        </div>

                    </div>

                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label>Check-in Date <span class="text-danger">*</span></label>
                            <div class="cal-icon">
                                <input class="form-control datetimepicker" type="text">
                            </div>
                        </div>

                        <div class="form-group col-lg-6">
                            <label>Check-out Date <span class="text-danger">*</span></label>
                            <div class="cal-icon">
                                <input class="form-control datetimepicker" type="text">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label>Room ID <span class="text-danger">*</span></label>
                            <input class="form-control" type="text">
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Room Type</label>
                            <select class="form-control form-white" data-placeholder="" name="category-color">
                                <option value="success">Classic</option>
                                <option value="danger">Deluxe</option>
                                <option value="info">Luxury</option>
                                <option value="primary">Suite</option>
                                <option value="warning">Superior</option>
                                <option value="inverse">Family</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Service ID <span class="text-danger">*</span></label>
                        <input class="form-control" type="text">
                    </div>

                    <div class="form-group">
                        <label>Total Price <span class="text-danger">*</span></label>
                        <input class="form-control" type="text">
                    </div>




                    <div class="submit-section">
                        <button class="btn btn-primary submit-btn">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- End -->

    <div class="modal fade none-border" id="my_event">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add New Room</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body"></div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-success save-event submit-btn">Submit</button>
                    <button type="button" class="btn btn-danger delete-event submit-btn" data-dismiss="modal">Delete</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="add_new_event">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add RoomType</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label>Room Type</label>
                            <input class="form-control form-white" placeholder="Enter name" type="text" name="category-name" />
                        </div>
                        <div class="form-group mb-0">
                            <label>Room Type</label>
                            <select class="form-control form-white" data-placeholder="Choose a color..." name="category-color">
                                <option value="success">Classic</option>
                                <option value="danger">Deluxe</option>
                                <option value="info">Luxury</option>
                                <option value="primary">Suite</option>
                                <option value="warning">Superior</option>
                                <option value="inverse">Family</option>
                            </select>
                        </div>
                        <div class="submit-section">
                            <button type="button" class="btn btn-primary save-category submit-btn" data-dismiss="modal">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="add_event" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content modal-md">
            <div class="modal-header">
                <h4 class="modal-title">Add New Booking</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label>Booking ID <span class="text-danger">*</span></label>
                        <input class="form-control" type="text">
                    </div>
                    <div class="form-group">
                        <label>Booking Date <span class="text-danger">*</span></label>
                        <div class="cal-icon">
                            <input class="form-control datetimepicker" type="text">
                        </div>
                    </div>
                    <div class="m-t-20 text-center">
                        <button class="btn btn-primary submit-btn">Create Event</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
