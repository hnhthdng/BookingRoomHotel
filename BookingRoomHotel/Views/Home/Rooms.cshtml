    <style>
        * {
            font-family: 'Poppins', sans-serif;
        }

        .h-font {
            font-family: 'Merienda', cursive;
        }

        .custom-bg {
            background-color: #2ec1ac;
        }

            .custom-bg:hover {
                background-color: #3d279e;
            }

        .avai-form {
            margin-top: -50px;
            z-index: 2;
            position: relative;
        }

        .btn-custom {
            margin-right: 10px;
        }
