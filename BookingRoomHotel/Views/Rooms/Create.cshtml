@model BookingRoomHotel.ViewModels.CreateRoomViewModel

@{
    ViewData["Title"] = "Create";
}
<div class="mt-5">
    <a onclick="sendJwt('/Rooms/Index','')" class="btn btn-primary">Back to List</a>
    <div>
        <form onsubmit="return sendJwtAndData('/Rooms/Create', '')" id="formData">
            <div class="col-lg-12">
                <div class="row formtype">
                    <div class="col-md-6">
                        <label asp-for="RoomNumber" class="control-label">Room Number</label>
                        <div class="form-group">
                            <input type="number" min="0" asp-for="RoomNumber" class="form-control" />
                            <span asp-validation-for="RoomNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Price" class="control-label"></label>
                            <div class="custom-file mb-3">
                                <input asp-for="Price" type="number" min="0" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="HotelID" class="control-label">Hotel</label>
                            <div class="form-group">
                                <select class="form-select" asp-for="HotelID">
                                    <option value="" style="display:none;"></option>
                                    <option value="1">The Ritz-Carlton</option>
                                    <option value="2">Four Seasons Hotel</option>
                                    <option value="3">Hilton Hotels & Resorts</option>
                                    <option value="4">Mandarin Oriental</option>
                                    <option value="5">Waldorf Astoria</option>
                                    <option value="6">The Plaza Hotel</option>
                                </select>
                                <span asp-validation-for="HotelID" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="RoomTypeID" class="control-label">Room Type</label>
                            <div class="form-group">
                                <select class="form-select" asp-for="RoomTypeID">
                                    <option value="" style="display:none;"></option>
                                    <option value="1">Suite Room</option>
                                    <option value="2">Classic Room</option>
                                    <option value="3">Family Room</option>
                                    <option value="4">Deluxe Room</option>
                                    <option value="5">Superior Room</option>
                                    <option value="6">Luxury Room</option>
                                </select>
                                <span asp-validation-for="RoomTypeID" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Description</label>
                            <textarea class="form-control" rows="5" asp-for="Describe"></textarea>
                            <span asp-validation-for="Describe" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                        <div class="form-group">
                            <label>Image Upload</label>
                            <div class="custom-file mb-3">
                                <input type="file" asp-for="Image" accept="image/*">
                            <span asp-validation-for="Image" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>

    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}