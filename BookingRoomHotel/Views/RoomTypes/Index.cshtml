@model BookingRoomHotel.ViewModels.ListRoomTypeViewModel

@{
    ViewData["Title"] = "Customer Management";
}
<div class="mt-5">

    <div>
        <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-primary">Back to DashBoard</a>
    </div>

    <div>
        <div class="d-flex">
            <div class="card card-table flex-fill">
                <div class="card-header">
                    <h4 class="card-title float-left mt-2">Room Types</h4>
                    <button type="button" class="btn btn-primary float-right veiwbutton">View All</button>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-center">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ListRoomTypes)
                                {
                                    <tr>
                                        <td class="text-nowrap">
                                            @Html.DisplayFor(modelItem => item.RoomTypeID)
                                        </td>
                                        <td class="text-nowrap">
                                            @Html.DisplayFor(modelItem => item.TypeName)
                                        </td>

                                        <td class="text-right">
                                            <div class="dropdown dropdown-action">
                                                <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fas fa-ellipsis-v ellipse_color"></i></a>
                                                <div class="dropdown-menu dropdown-menu-right">
                                                    <a class="dropdown-item" href="javascript:void(0)" onclick="sendJwt('/RoomTypes/Edit/', '@item.RoomTypeID')"><i class="fas fa-pencil-alt m-r-5"></i> Edit</a>
                                                    <a class="dropdown-item" href="javascript:void(0)" onclick="sendJwt('/RoomTypes/Details/', '@item.RoomTypeID')"><i class="fas fa-id-card m-r-5"></i> Details</a>
                                                    <a class="dropdown-item" href="javascript:void(0)" onclick="sendJwt('/RoomTypes/Delete/', '@item.RoomTypeID')" data-toggle="modal" data-target="#delete_asset"><i class="fas fa-trash-alt m-r-5"></i> Delete</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= Model.Count; i++)
                {
                    <li class="page-item"><a class="page-link" href="javascript:void(0)" onclick="return pagination('/RoomTypes/Index/' + '@i')">@i</a></li>
                }
            </ul>
        </nav>
    </div>
    <div id="delete_asset" class="modal fade delete-modal" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <img src="~/css/assets/img/sent.png" alt="" width="50" height="46">
                    <h3 class="delete_class">Are you sure want to delete this Asset?</h3>
                    <div class="m-t-20">
                        <a href="#" class="btn btn-white" data-dismiss="modal">Close</a>
                        <button onclick="deleteObject('/RoomTypes/Delete/')" class="btn btn-danger" data-dismiss="modal">Delete</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="add_event1" class="modal fade" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add New Booking</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true">&times;</span> </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="row">
                            <div class="form-group col-lg-6">
                                <label>Booking ID <span class="text-danger">*</span></label>
                                <input class="form-control" type="text">
                            </div>

                            <div class="form-group col-lg-6">
                                <label>Customer ID <span class="text-danger">*</span></label>
                                <input class="form-control" type="text">
                            </div>

                        </div>

                        <div class="row">
                            <div class="form-group col-lg-6">
                                <label>Check-in Date <span class="text-danger">*</span></label>
                                <div class="cal-icon">
                                    <input class="form-control datetimepicker" type="text">
                                </div>
                            </div>

                            <div class="form-group col-lg-6">
                                <label>Check-out Date <span class="text-danger">*</span></label>
                                <div class="cal-icon">
                                    <input class="form-control datetimepicker" type="text">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-lg-6">
                                <label>Room ID <span class="text-danger">*</span></label>
                                <input class="form-control" type="text">
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Room Type</label>
                                <select class="form-control form-white" data-placeholder="" name="category-color">
                                    <option value="success">Classic</option>
                                    <option value="danger">Deluxe</option>
                                    <option value="info">Luxury</option>
                                    <option value="primary">Suite</option>
                                    <option value="warning">Superior</option>
                                    <option value="inverse">Family</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Service ID <span class="text-danger">*</span></label>
                            <input class="form-control" type="text">
                        </div>

                        <div class="form-group">
                            <label>Total Price <span class="text-danger">*</span></label>
                            <input class="form-control" type="text">
                        </div>




                        <div class="submit-section">
                            <button class="btn btn-primary submit-btn">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>