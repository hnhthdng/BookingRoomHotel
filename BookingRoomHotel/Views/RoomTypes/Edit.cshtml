@model BookingRoomHotel.Models.RoomType

@{
    ViewData["Title"] = "Edit";
}


<div class="mt-5">
    <div>
        <a class="btn btn-primary" onclick="sendJwt('/RoomTypes/Index','')">Back to List</a>
    </div>
    <div >
        <form onsubmit="return sendJwtAndData('/RoomTypes/Edit/', '@Model.RoomTypeID')" id="formData">
            <div class="col-lg-12">
                <div class="row formtype">
                    <input type="hidden" asp-for="RoomTypeID" />
                    <div class="col-md-4">
                        <label asp-for="TypeName" class="control-label">Name</label>
                        <div class="form-group">
                            <input asp-for="TypeName" class="form-control" />
                            <span asp-validation-for="TypeName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Bed" class="control-label">Bed Count</label>
                            <div class="form-group">
                                <select class="form-control" asp-for="Bed">
                                    <option>Select</option>
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                    <option>6</option>
                                </select>
                                <span asp-validation-for="Bed" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Max" class="control-label">Max people</label>
                            <div class="form-group">
                                <select class="form-control" asp-for="Max">
                                    <option>Select</option>
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                    <option>6</option>
                                </select>
                                <span asp-validation-for="Max" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="PriceFrom" class="control-label"></label>
                            <div class="custom-file mb-3">
                                <input asp-for="PriceFrom" type="number" min="0" class="form-control" />
                                <span asp-validation-for="PriceFrom" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="PriceTo" class="control-label"></label>
                            <div class="custom-file mb-3">
                                <input asp-for="PriceTo" type="number" min="0" class="form-control" />
                                <span asp-validation-for="PriceTo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Size" class="control-label"></label>
                            <div class="custom-file mb-3">
                                <input asp-for="Size" type="number" min="0" class="form-control" />
                                <span asp-validation-for="Size" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="View" class="control-label"></label>
                            <div class="custom-file mb-3">
                                <input asp-for="View" class="form-control" />
                                <span asp-validation-for="View" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Description 1</label>
                            <textarea class="form-control" rows="5" asp-for="Description1"></textarea>
                            <span asp-validation-for="Description1" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Description 2</label>
                            <textarea class="form-control" rows="5" i asp-for="Description2"></textarea>
                            <span asp-validation-for="Description2" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Description 3</label>
                            <textarea class="form-control" rows="5" asp-for="Description3"></textarea>
                            <span asp-validation-for="Description3" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Image Upload</label>
                            <div class="custom-file mb-3">
                                <input type="file" name="Images" accept="image/*" multiple>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Youtube Video ID</label>
                            <div class="custom-file mb-3">
                                <input name="VideoID" class="form-control"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

