@model BookingRoomHotel.Models.Customer

@{
    ViewData["Title"] = "Details";
}
<div class="mt-5">
    <form onsubmit="return sendJwtAndData('/Customers/Edit/', '@Model.Id')" id="formData">
        <div class="col-xl-12">
            <div class="card mb-4">
                <div class="card-header">Profile Customer</div>
                <div class="card-body d-flex flex-wrap">
                    <div class="col-xl-4">
                        <div class="card mb-4 mb-xl-0">
                            <div class="card-body text-center upload-btn-wrapper">
                                <img class="img-account-profile rounded-circle mb-2" height="140" width="140" src="~/images/customer/profile/@Model.ImgAvt">
                                <input type="hidden" id="fileInput" style="display: none;" asp-for="ImgAvt">
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-8">
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="col-3 col-md-4 pl-0 mb-3">
                                    <input class="form-control disabled" asp-for="Status" />
                                </div>
                                <div class="mb-3">
                                    <label class="small mb-1 control-label">Name</label>
                                    <input class="form-control disabled" asp-for="Name">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Email" class="control-label small mb-1"></label>
                                    <input asp-for="Email" class="form-control disabled" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Address" class="control-label small mb-1"></label>
                                    <input asp-for="Address" class="form-control disabled" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>

                                <div class="row gx-3 mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="Phone" class="control-label small mb-1"></label>
                                        <input asp-for="Phone" class="form-control disabled" />
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="DateOfBirth" class="control-label small mb-1"></label>
                                        <input asp-for="DateOfBirth" class="form-control disabled" />
                                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row gx-3 mb-3">
                                    <div class="col-md-6">
                                        <label class="card-title">Picture Identify 1</label>
                                        <div class="d-flex justify-content-center mb-2" width="40" height="160">
                                            <img style="height: 10rem;" class="img-account-profile" src="~/images/customer/imgIdentify1/@Model.ImgIdentify1">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="card-title">Picture Identify 2</label>
                                        <div class="d-flex justify-content-center mb-2" width="40" height="160">
                                            <img style="height: 10rem;" src="~/images/customer/imgIdentify2/@Model.ImgIdentify2">
                                        </div>
                                    </div>
                                </div>
                                <button class="btn btn-primary" type="submit">Save changes</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <div>
        <a onclick="sendJwt('/Customers/Edit/', '@Model.Id')">Edit</a> |
        <a onclick="sendJwt('/Customers/Index','')">Back to List</a>
    </div>
</div>

